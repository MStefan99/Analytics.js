extends layout


block head
	title Dashboard | Analyze.js
	link(rel='modulepreload' as='script' href='/js/dashboard.js')
	link(rel='modulepreload' as='script' href='/js/jui.js')


block main
	h1 Your websites
	div.d-flex
		p.new-website-btn.btn.btn-outline-success Add website

	div#website-container
		if websites
			each website in websites
				a.website(href='/overview/' + website.id)
					h3= website.name
		else
			div.jumbotron
				h2 Seems like here are no websites yet!
				p Add a website to start
				p.new-website-btn.btn.btn-success Add website

	script(async type='module' src='/js/dashboard.js')
