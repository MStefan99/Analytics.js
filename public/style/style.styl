html
	font-family sans-serif
	scroll-behavior smooth

	a
		color inherit

	.popup
		position fixed
		box-shadow 0 0 1em #0005
		border-radius 8px
		padding 1em
		background-color white

	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh

		header
			display flex
			flex-flow row nowrap
			justify-content space-between
			padding 1em 2em
			background-color #258600
			color white

		main
			margin 2em auto
			flex-grow 1

			#dashboard
				#realtime-audience
					border-radius 8px
					background-color #258600
					color #fff
					padding 1em 2ch

					#active-users
						font-size 3em
						margin 1rem 0

					#active-users-timeline-svg
						display block
						margin 1em 0
						width 30ch

						&:hover
							.sessions-bar
								fill darken(#69ce39, 20%)

							.sessions-bar-underline, #top-line
								fill darken(#509d25, 10%)

						.sessions-bar
							fill #69ce39

							&:hover
								fill lighten(#69ce39, 20%)

						.sessions-bar-underline, #top-line
							fill #509d25

					table
						width 100%

						td:nth-child(2)
							text-align end

						thead
							font-weight bold

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			padding 1em 2em
			background-color darken(white, 5%)
