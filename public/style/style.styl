--color-theme = #258600
--color-white = white


html
	font-family sans-serif
	scroll-behavior smooth

	a
		color inherit

	.popup-backdrop
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		backdrop-filter brightness(.7)

	.popup
		position fixed
		box-shadow 0 0 1em transparentify(--color-theme, 50%)
		border-radius 8px
		padding 1em
		background-color --color-white

		&.green
			background-color darken(--color-theme, 30%)
			color --color-white

		&.centered
			top 50vh
			left 50vw
			transform translate(-50%, -50%)


	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh

		header
			display flex
			flex-flow row nowrap
			justify-content space-between
			padding 1em 2em
			background-color --color-theme
			color --color-white

		main
			margin 2em auto
			flex-grow 1

			#dashboard
				#realtime-audience
					border-radius 8px
					background-color --color-theme
					color --color-white
					padding 1em 2ch

					#active-users
						font-size 3em
						margin 1rem 0

					#active-users-timeline-svg
						display block
						margin 1em 0
						width 30ch

						&:hover
							.sessions-bar
								fill lighten(--color-theme, 5%)

							.sessions-bar-underline, #top-line
								fill darken(--color-theme, 15%)

						.sessions-bar
							fill lighten(--color-theme, 15%)

							&:hover
								fill lighten(--color-theme, 20%)

						.sessions-bar-underline, #top-line
							fill lighten(--color-theme, 5%)

					table
						width 100%
						margin 1em 0

						td:nth-child(1) a
							display inline-block
							max-width 25ch
							word-break break-all

						td:nth-child(2)
							text-align end

						thead
							font-weight bold

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			padding 1em 2em
			background-color darken(--color-white, 5%)
