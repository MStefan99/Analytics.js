--color-theme = #258600
--color-white = white
--color-black = black


card()
	border-radius 8px
	padding 1em 2ch
	margin 0 2ch
	box-shadow 0 0 .5em transparentify(--color-black, 20%)


html
	font-family sans-serif
	scroll-behavior smooth

	a
		color inherit

	.accent
		font-size 3em
		margin 1rem 0

	.popup-backdrop
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		backdrop-filter brightness(.7)

	.popup
		position fixed
		box-shadow 0 0 1em transparentify(--color-theme, 50%)
		border-radius 8px
		padding 1em
		background-color --color-white

		&.green
			background-color darken(--color-theme, 30%)
			color --color-white

		&.centered
			top 50vh
			left 50vw
			transform translate(-50%, -50%)


	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh

		header
			display flex
			flex-flow row nowrap
			justify-content space-between
			padding 1em 2em
			background-color --color-theme
			color --color-white

		main
			margin 2em auto
			flex-grow 1

			#overview
				display flex
				flex-flow row wrap
				justify-content center

				#realtime-audience
					card()
					background-color --color-theme
					color --color-white

					#active-users-timeline-svg
						display block
						margin 1em 0
						height 100px
						width 100%

						&:hover
							.sessions-bar
								fill lighten(--color-theme, 5%)

							.sessions-bar-underline, #top-line
								fill darken(--color-theme, 15%)

						.sessions-bar
							fill lighten(--color-theme, 15%)

							&:hover
								fill lighten(--color-theme, 20%)

						.sessions-bar-underline, #top-line
							fill lighten(--color-theme, 5%)

					table
						width 100%
						margin 1em 0

						td:nth-child(1) a
							display inline-block
							max-width 25ch
							word-break break-all

						td:nth-child(2)
							text-align end

						thead
							font-weight bold

				#today-audience
					card()
					background-color --color-white


		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			padding 1em 2em
			background-color darken(--color-white, 5%)
