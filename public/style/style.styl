html
	font-family sans-serif
	scroll-behavior smooth

	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh

		header
			display flex
			flex-flow row nowrap
			justify-content space-between
			padding 1em 2em
			background-color darken(white, 5%)

			a
				color black

		main
			margin 2em auto
			flex-grow 1

			#dashboard
				#realtime-audience
					border-radius 8px
					background-color #006fe6
					color #fff
					padding 1em 2ch

					#active-users
						font-size 3em
						margin 1rem 0

					#active-users-timeline-svg
						width 30ch

						.sessions-bar
							fill #004798

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			padding 1em 2em
			background-color darken(white, 15%)
