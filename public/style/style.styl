html
	font-family sans-serif
	scroll-behavior smooth

	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh

		header
			display flex
			flex-flow row nowrap
			justify-content space-between
			padding 1em 2em
			background-color darken(white, 5%)

			a
				color black

		main
			margin 2em auto
			flex-grow 1

		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			padding 1em 2em
			background-color darken(white, 15%)
