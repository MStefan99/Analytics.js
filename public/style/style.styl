--color-theme = #258600
--color-white = white
--color-black = black


card()
	border-radius 8px
	padding 1em 2ch
	margin 2ch
	box-shadow 0 0 .5em transparentify(--color-black, 20%)


html
	font-family sans-serif
	scroll-behavior smooth
	background-color --color-white
	color --color-black

	a
		color inherit

	.accent
		font-size 3em
		margin 1rem 0

	.popup-backdrop
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		backdrop-filter brightness(.7)

	.popup
		position fixed
		card()
		background-color --color-white

		&.green
			background-color darken(--color-theme, 30%)
			color --color-white

		&.centered
			top 50vh
			left 50vw
			transform translate(-50%, -50%)


	body
		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh

		header
			display flex
			flex-flow row nowrap
			justify-content space-between
			padding 1em 2em
			background-color --color-theme
			color --color-white

		main
			margin 2em auto
			flex-grow 1
			max-width calc(100vw - 8ch)

			#overview
				display flex
				flex-flow row wrap
				justify-content center
				align-content stretch

				@media screen and (max-width 768px)
					flex-flow column

				.audience-card
					card()

				#realtime-audience
					background-color --color-theme
					color --color-white

					#active-users-timeline-svg
						display block
						margin 1em 0
						height 100px
						width 100%

						&:hover
							.sessions-bar
								fill lighten(--color-theme, 5%)

							.sessions-bar-underline, #top-line
								fill darken(--color-theme, 15%)

						.sessions-bar
							fill lighten(--color-theme, 15%)

							&:hover
								fill lighten(--color-theme, 20%)

						.sessions-bar-underline, #top-line
							fill lighten(--color-theme, 5%)

					table
						width 100%
						margin 1em 0

						td:nth-child(1) a
							display inline-block
							max-width 25ch
							word-break break-all

						td:nth-child(2)
							text-align end

						thead td
							padding-bottom .5em

				#today-audience
					background-color --color-white


			#realtime-details
				#realtime-users-details-svg
					height 50vh
					display block
					margin 1em 0
					fill --color-theme
					stroke --color-theme

					#border
						fill transparent
						stroke darken(--color-theme, 20%)

					.horizontal-line
						stroke transparentify(--color-theme, --color-theme, 20%)

				#realtime-metrics
					display flex
					flex-flow row wrap
					justify-content space-between

					table
						width 100%
						margin 1em 0

						td:nth-child(1) a
							display inline-block
							max-width 25ch
							word-break break-all

						td:nth-child(2)
							text-align end

						thead td
							padding-bottom .5em


		footer
			display flex
			flex-flow row wrap
			justify-content space-between
			padding 1em 2em
			background-color darken(--color-white, 5%)
